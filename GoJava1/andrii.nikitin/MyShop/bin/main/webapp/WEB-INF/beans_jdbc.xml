<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<context:annotation-config />
	<context:component-scan base-package="ua.com.goit.gojava.andriidnikitin.MyShop" />

	<bean id="applicationContextProvider"
		class="ua.com.goit.gojava.andriidnikitin.MyShop.commons.MyContextLoader">
	</bean>

	<!-- Common beans; TODO - replace -->

	<bean id="daoLogger" class="org.apache.log4j.Logger"
		factory-method="getLogger">
		<constructor-arg value="MyShop.DAO" />
	</bean>

	<bean id="blLogger" class="org.apache.log4j.Logger"
		factory-method="getLogger">
		<constructor-arg value="MyShop.BL" />
	</bean>

	<bean id="uiLogger" class="org.apache.log4j.Logger"
		factory-method="getLogger">
		<constructor-arg value="MyShop.UI" />
	</bean>

	<bean id="commonLogger" class="org.apache.log4j.Logger"
		factory-method="getLogger">
		<constructor-arg value="MyShop.commons" />
	</bean>


	<!-- TODO inject logger beans to all beans -->

	<!-- DAO beans -->

	<bean id="daoFactory"
		class="ua.com.goit.gojava.andriidnikitin.MyShop.db.PostgresqlDaoFactory">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="goodDao"
		class="ua.com.goit.gojava.andriidnikitin.MyShop.db.PostgresqlGoodDao"
		scope="prototype">
		<property name="daoFactory" ref="daoFactory" />
		<property name="log" ref="daoLogger" />
	</bean>

	<bean id="goodTypeDao"
		class="ua.com.goit.gojava.andriidnikitin.MyShop.db.PostgresqlGoodTypeDao"
		scope="prototype">
		<property name="daoFactory" ref="daoFactory" />
		<property name="log" ref="daoLogger" />
	</bean>

	<bean id="goodIncomingDao"
		class="ua.com.goit.gojava.andriidnikitin.MyShop.db.PostgresqlGoodIncomingDao"
		scope="prototype">
		<property name="daoFactory" ref="daoFactory" />
		<property name="log" ref="daoLogger" />
	</bean>

	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="org.postgresql.Driver" />
		<property name="url" value="jdbc:postgresql://localhost:5432/shop" />
		<property name="username" value="postgres" />
		<property name="password" value="mypass" />
	</bean>

	<bean id="hibernateUtil"
		class="ua.com.goit.gojava.andriidnikitin.MyShop.db.util.HibernateUtil">
	</bean>

	<!-- BL beans -->

	<bean id="goodCatalog"
		class="ua.com.goit.gojava.andriidnikitin.MyShop.domain.service.GoodCatalogImpl">
		<property name="daoFactory" ref="daoFactory" />
		<property name="log" ref="blLogger" />
	</bean>

	<bean id="good"
		class="ua.com.goit.gojava.andriidnikitin.MyShop.domain.model.Good" />

	<bean id="goodType"
		class="ua.com.goit.gojava.andriidnikitin.MyShop.domain.model.GoodType" />

	<bean id="goodIncoming"
		class="ua.com.goit.gojava.andriidnikitin.MyShop.domain.model.GoodIncoming" />

</beans>