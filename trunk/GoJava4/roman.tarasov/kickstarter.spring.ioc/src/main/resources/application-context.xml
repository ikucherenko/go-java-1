<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                                        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                    http://www.springframework.org/schema/context
                    http://www.springframework.org/schema/context/spring-context-3.2.xsd
                                        http://www.springframework.org/schema/tx
                                        http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">

	<context:component-scan base-package="education.kickstarter.spring.ioc" />
 
    <context:property-placeholder location="classpath:jdbc.properties" />
	<bean id="consolePrinter"
		class="education.kickstarter.spring.ioc.ConsolePrinter">
		<constructor-arg value="message to print" />
	</bean>
	
	<bean id="dataSourcePool" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
    <property name="driverClassName" value="${jdbc.driverClassName}"/>
    <property name="url" value="${jdbc.url}"/>
    <property name="username" value="${jdbc.username}"/>
    <property name="password" value="${jdbc.password}"/>
</bean>

  <bean id="DBcategoryServiceImpl" class="education.kickstarter.spring.ioc.dao.DBcategoryServiceImpl">
     <property name="dataSource" ref="dataSourcePool"/>
  </bean>


</beans>