<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
        <constant name="struts.devMode" value="true" />
                <package name="basicstruts2" extends="struts-default">
                        
                        <action name="categories" class="ua.com.goit.gojava.controller.CategoriesAction" method="getAll">
                                <result name="success">/categories.jsp</result>
                        </action>
                                
                        <action name="projects" class="ua.com.goit.gojava.controller.ProjectsAction" method="findProjects">
                                <result name="success">/projects.jsp</result>
                        </action>
                        
                        <action name="project" class="ua.com.goit.gojava.controller.ProjectAction" method="current">
                                <result name="success">/project.jsp</result>
                        </action>
        </package>
</struts>
