<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd">

	<context:component-scan base-package="ua.goit"
		annotation-config="true">
	</context:component-scan>

	<bean id="ModelServiceLocator" name="modelServiceLocator"
		class="ua.goit.web.servlet.ModelServiceLocator" scope="singleton">
		<property name="services">
			<map>
				<entry key="main" value-ref="Main">
				</entry>
				<entry key="projects" value-ref="Projects">
				</entry>
			</map>
		</property>
	</bean>

	<bean id="Main" name="main" class="ua.goit.web.model.Main">
		<constructor-arg>
			<bean class="ua.goit.web.model.dao.MemoryQuoteDaoImpl" id="MemoryQuoteDaoImpl">
			</bean>
		</constructor-arg>
		<constructor-arg>
			<bean class="ua.goit.web.model.dao.MemoryCategoryDaoImpl" id="MemoryCategoryDaoImpl">
			</bean>
		</constructor-arg>
	</bean>
	
	<bean id="Projects" name="projects" class="ua.goit.web.model.Projects">
		<constructor-arg>
			<bean id="MemoryProjectDaoImpl" class="ua.goit.web.model.dao.MemoryProjectDaoImpl">
			</bean>
		</constructor-arg>
	</bean>
	
	<bean id="MemoryQuoteDaoImpl" name="memoryQuoteDaoImpl"
		class="ua.goit.web.model.dao.MemoryQuoteDaoImpl">
	</bean>

	<bean id="MemoryCategoryDaoImpl" name="memoryCategoryDaoImpl"
		class="ua.goit.web.model.dao.MemoryCategoryDaoImpl">
	</bean>
	<bean id="MemoryProjectDaoImpl" name="memoryProjectDaoImpl"
		class="ua.goit.web.model.dao.MemoryProjectDaoImpl">
	</bean>


</beans>
